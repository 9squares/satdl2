<% provide(:title, 'Sign in') %>
<div class = "container">

    <div class = "col-md-6">

        <h1>Sign in</h1>

            <div class="span6 offset3">
                <%= form_for(:session, url: sessions_path) do |f| %>
                <form class = "form-horizontal" role = "form">
            
                    <div class = "form-group">
                      <%= f.label :email, class: "col-md-4 control-label" %>
                      <div class = "col-md-8">
                      <p><%= f.text_field :email, class: "form-control" %></p>
                    </div>

                    <div class = "form-group">
                      <%= f.label :password, class: "col-md-4 control-label" %>
                      <div class = "col-md-8">
                      <p><%= f.password_field :password, class: "form-control" %></p>
                    </div>

                    <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                      <%= f.submit "Sign In", class: "btn btn-large btn-primary pull-right" %>
                    </div>
                    </div>
                </form>
            <% end %>

            <p>New user? <%= link_to "Sign up now!", signup_path %></p>
            </div>

    </div>

</div>
