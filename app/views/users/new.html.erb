<div class = "container">

  <div class = "col-md-6">

     <h1>Sign Up</h1>

      <div class="span6 offset3">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>
          <form class = "form-horizontal" role = "form">
            
            <div class = "form-group">
              <%= f.label :name, class: "col-md-4 control-label" %>
              <div class = "col-md-8">
              <p><%= f.text_field :name, class: "form-control" %></p>
            </div>

            <div class = "form-group">
              <%= f.label :email, class: "col-md-4 control-label" %>
              <div class = "col-md-8">
              <p><%= f.text_field :email, class: "form-control" %></p>
            </div>
            
            <div class = "form-group">
              <%= f.label :password, class: "col-md-4 control-label" %>
              <div class = "col-md-8">
              <p><%= f.password_field :password, class: "form-control" %></p>
            </div>
            
            <div class = "form-group">
              <%= f.label :password_confirmation, "Confirmation", class: "col-md-4 control-label" %>
              <div class = "col-md-8">
              <p><%= f.password_field :password_confirmation, class: "form-control" %></p>
            </div>
            
            <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
              <%= f.submit "Create my account", class: "btn btn-large btn-primary pull-right" %>
            </div>
            </div>
          </form>

        <% end %>
      </div>

  </div>

</div>