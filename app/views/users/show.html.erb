<div class = "container">
  <div class = "col-md-12">

    <div class = "row">
      <div class = "col-sm-2">
        <%= gravatar_for @user %>
      </div>

      <div class = "col-sm-10">
        <h1><%= @user.name %></h1>
      </div>
    </div>
    
    <div class = 'container'>
      <div class = 'row'>
        
        <div class = "col-sm-3">
          <h2>Add a task:</h2>
          <div>
            <%= form_for([@user, @user.tasks.build]) do |f| %>
            <p>
              <% f.label :title %>
              <%= f.text_area :title, class: "form-control", rows: "3" %>
            </p>
            <p>
              <%= f.submit "Create Task", class: "btn btn-primary" %>
            </p>
          </div>
          <% end %>
        </div>

        <div class = "col-sm-5">
          <h2>Tasks:</h2>
          <% @user.tasks.each do |task| %>
          <%= task.title %>
          <%= link_to 'Destroy Task', [task.user, task],method: :delete, class: "btn btn-danger btn-xs pull-right" %></p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
